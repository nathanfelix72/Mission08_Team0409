@{
    ViewData["Title"] = "Time Management Matrix";
}

@model IEnumerable<Mission08_Team0409.Models.TaskItem>

<h2 class="text-center mb-4">Time Management Matrix</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 border p-4 bg-light">
            <h4 class="text-center">Quadrant I</h4>
            <p class="text-center"><strong>Important / Urgent</strong></p>
            <ul class="list-group">
                @foreach (var item in Model.Where(t => t.Quadrant == 1 && !t.Completed))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.TaskToDo</span>
                        <div>
                            <form method="post" asp-controller="Home" asp-action="MarkComplete" asp-route-id="@item.TaskId" style="display:inline;">
                                <input type="hidden" name="id" value="@item.TaskId" />
                                <button type="submit" class="btn btn-sm btn-outline-success me-2">
                                    <i class="bi bi-check2-square"></i> Complete
                                </button>
                            </form>
                            <a class="btn btn-sm btn-outline-info me-2" asp-controller="Home" asp-action="Edit" asp-route-id="@item.TaskId">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.TaskId">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6 border p-4 bg-success-subtle">
            <h4 class="text-center">Quadrant II</h4>
