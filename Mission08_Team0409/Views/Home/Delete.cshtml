}

@model Mission08_Team0409.Models.TaskItem

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px;">
        <div class="card-body text-center">
            <h2 class="text-danger mb-3">Confirm Deletion</h2>
            <p class="fs-5 text-secondary">Are you sure you want to delete this task?</p>
            <h4 class="fw-bold text-dark">"@Model.TaskToDo"</h4>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="TaskId"/>
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

